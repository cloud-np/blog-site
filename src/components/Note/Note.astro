---
interface Props {
    noteType: string,
    title: string
}

const { noteType, title } = Astro.props;

const noteCssVariant = noteType.toLowerCase() ?? 'note';
---

<style>
    .note-header {
        display: flex;
        align-items: center;
    }
    .note {
        padding: 3rem;
        background-color: blueviolet;
        border-radius: 2px;
        border: 1px solid var(--theme-code-border);
    }

    .icon {
        color: white;
    }

</style>

<aside class={noteCssVariant}>
    <header class="note-header">
        <span class="icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 18 18" width="32" height="32" class="icon">
                <path fill-rule="evenodd" d="M0 3.75C0 2.784.784 2 1.75 2h12.5c.966 0 1.75.784 1.75 1.75v8.5A1.75 1.75 0 0114.25 14H1.75A1.75 1.75 0 010 12.25v-8.5zm1.75-.25a.25.25 0 00-.25.25v8.5c0 .138.112.25.25.25h12.5a.25.25 0 00.25-.25v-8.5a.25.25 0 00-.25-.25H1.75zM3.5 6.25a.75.75 0 01.75-.75h7a.75.75 0 010 1.5h-7a.75.75 0 01-.75-.75zm.75 2.25a.75.75 0 000 1.5h4a.75.75 0 000-1.5h-4z" class="astro-duqfclob"></path>
            </svg>
        </span>
        <h4>{ title }</h4>
    </header>
    <slot />
</aside>
