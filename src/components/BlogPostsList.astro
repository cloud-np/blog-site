---
import type { Post } from '../libs/post';
import BlogPostPreview from './BlogPostPreview.astro';

export interface Props {
	class?: string;
	posts: Post[];
}

const { posts } = Astro.props;
---

<ul>
	{
		posts.map((post) => (
			<li>
				<BlogPostPreview post={post} />
			</li>
		))
	}
</ul>

<style>
	ul {
		margin: 0 0 10vh 0;
		list-style: none;
		padding: 0;
		display: grid;
		grid-template-columns: 1fr;
		gap: 3rem;
	}
</style>
