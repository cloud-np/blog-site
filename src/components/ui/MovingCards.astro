<style>
    .wrapper {
        width: 100%;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: row;
        overflow: hidden;
    }

    /* .inner {
        overflow: hidden;
    } */

    .scroller-container {
        position: relative;
        animation: swipe var(--duration) linear infinite forwards;
    }

    @keyframes swipe {
        0% {
            transform: translateX(0);
        }

        100% {
            transform: translate(calc(-50% - 0.5rem));
