---
interface Props {
    duration: number;
}
const { duration } = Astro.props;
---

<div class="wrapper">
    <div class="inner max-w-7xl">
        <section
            class="scroller-container flex min-w-full shrink-0 w-max flex-nowrap"
            style={{ "--duration": `${duration}ms` }}
        >
            <slot />
        </section>
    </div>
</div>

