<script>
	import gsap from "gsap";
	import { ScrollTrigger } from "gsap/all";
	import { Scroll } from "../components/ui/ScrollController/ScrollController";

	const REVEAL_DELAY = 3.72;
	gsap.registerPlugin(ScrollTrigger);

	function init(delay: number = 0) {
		const tl = gsap.timeline({
			defaults: { ease: "power2.out" },
			scrollBehavior: "smooth",
		});
		const portofolioTl = gsap.timeline({
			defaults: { ease: "power2.out" },
			scrollBehavior: "smooth",
			paused: true,
		});
		portofolioTl
			.to(".portofolio-title", { duration: 0.8, y: 0 })
			.to(".portofolio-text", { duration: 0.8, y: 0 }, "-=0.4");

		tl.to(".hero-title", { duration: 0.8, y: 0, delay }).to(
			".hero-text",
			{ duration: 0.8, y: 0 },
			"-=0.4",
		);
		tl.to(".portofolio-details", {
			scrollTrigger: {
				trigger: ".portofolio-details",
				start: "top-=500 center",
				end: "center-=300 center",
				scrub: true,
			},
			width: "100vw",
			duration: 2.2,
		});
		tl.to(".portofolio-title", {
			scrollTrigger: {
				trigger: ".portofolio-details",
				start: "top center",
				end: "center center",
				scrub: true,
				onEnter: () => portofolioTl.play(),
			},
		});

		const elements = document.querySelectorAll('.slow-fade') as NodeListOf<HTMLElement>;
		document.addEventListener('mousemove', mouseEvent => {
			elements.forEach(el => {
				const rect = el.getBoundingClientRect();
				const x = mouseEvent.pageX - rect.left;
				const y = mouseEvent.pageY - rect.top;
				
				// Calculate the position in percentages
				const xPercent = (x / rect.width) * 100;
				const yPercent = (y / rect.height) * 100;
				
				// Apply radial gradient mask effect
				const maskImage = `radial-gradient(
					circle at ${xPercent}% ${yPercent}%,
					rgba(255, 255, 255, 1) 0%,
					rgba(255, 255, 255, 0.9) 20%,
					rgba(255, 255, 255, 0.7) 40%,
					rgba(255, 255, 255, 0.5) 60%
				)`;
				
				el.style.maskImage = maskImage;
			});
		});

	}

	// Scroll.el(".portofolio-details", {
	// 	y: (y, direction) => y + -1 * direction * 5,
	// });

	Scroll.el(".scroll-down-indicator", {
		opacity: () =>
			window.scrollY - 100 >= 0
				? Math.max(1 - (window.scrollY - 100) / 20, 0)
				: 1,
	});

	// init(REVEAL_DELAY);
	init();
	document.addEventListener("astro:after-swap", () => {
		if (window.location.pathname === '/' || window.location.pathname === '') {
			init();
		}
	});
</script>

